{
  "expo": {
    "name": "contract-secretary",
    "slug": "contract-secretary",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icons/logo-icon.svg",
    "scheme": "contractsecretary",
    "userInterfaceStyle": "automatic",
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "package": "com.contractsecretary.app",
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/icons/logo-lockup.svg",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#2C3E50",
          "dark": {
            "backgroundColor": "#2C3E50"
          }
        }
      ],
      [
        "expo-secure-store",
        {
          "configureAndroidBackup": true,
          "faceIdPermission": "Allow 계약비서 to access your Face ID"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "extra": {
      "apiUrl": "${EXPO_PUBLIC_API_URL}",
      "releaseChannel": "${NODE_ENV}"
    }
  }
}
